<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/material_blue_grey_800"
    android:padding="0dp"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@mipmap/mothermotherland"
        android:orientation="vertical"
        android:visibility="visible">
            <TextView
                android:id="@+id/scoresTextView"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="right"
                android:textSize="30dp"
                android:paddingRight="10dp"
                android:textColor="@color/background_material_dark"
                android:text="Рахунок: 100"
                android:visibility="gone"
                />
            <LinearLayout
                android:id="@+id/questTypeLayout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Квест по Києву"
                        android:textSize="30dp"
                        android:textColor="@android:color/white"
                        android:id="@+id/outdoorRadioButton"
                        android:checked="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/outdoorQuestionsTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="30dp"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:id="@+id/outdoorRoomSizeTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="30dp"
                            android:textColor="@android:color/white"
                            android:gravity="right"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/romanticRadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Романтичний квест"
                        android:textSize="30dp"
                        android:textColor="@android:color/white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/romanticQuestionsTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="30dp"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:id="@+id/romanticRoomSizeTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="30dp"
                            android:textColor="@android:color/white"
                            android:gravity="right"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        <Button
            android:id="@+id/startButton"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/btn_color"
            android:textColor="@android:color/white"
            android:text="@string/start_quest"
            android:visibility="gone"
            />
    </LinearLayout>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_sign_in"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginBottom="0dp"
        />
</LinearLayout>